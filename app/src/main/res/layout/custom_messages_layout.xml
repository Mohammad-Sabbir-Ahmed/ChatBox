<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile_image"
            />

        <TextView
            android:id="@+id/receiver_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#615A5A"
            android:layout_toRightOf="@+id/message_profile_image" />

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/receiver_message_name"
            android:layout_toEndOf="@+id/message_profile_image"
            android:background="@drawable/receiver_messages_layout"
            android:text="receiver messages here"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/message_profile_image" />
        <TextView
            android:id="@+id/receiver_message_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/receiver_message_text"
            android:layout_toEndOf="@+id/message_profile_image"
            android:text="receiver messages here"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#615A5A"
            android:layout_toRightOf="@+id/message_profile_image" />

        <ImageView
            android:id="@+id/message_receiver_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="70dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/message_receiver_image_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:text="sender messages"
            android:layout_alignParentStart="true"
            android:textSize="10sp"
            android:visibility="invisible"
            android:layout_below="@id/message_receiver_image_view"
            android:textStyle="bold"
            android:textColor="#615A5A"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/message_sender_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/message_sender_image_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="sender messages"
            android:textSize="10sp"
            android:visibility="invisible"
            android:layout_below="@id/message_sender_image_view"
            android:textStyle="bold"
            android:textColor="#615A5A"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/sender_messsage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="@+id/receiver_message_text"
            android:background="@drawable/sender_messages_layout"
            android:text="sender messages"
            android:textSize="14sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/sender_messsage_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="sender messages"
            android:textSize="10sp"
            android:layout_below="@id/sender_messsage_text"
            android:textStyle="bold"
            android:textColor="#615A5A"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>